{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "types": ["jest", "node"],
    "jsx": "react-jsx", 
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include": ["src", "**/*.test.ts", "**/*.test.tsx"]
}
